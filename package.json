{
	"name": "vk-io-monorepo",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"engines": {
		"node": ">=8.0.0"
	},
	"devDependencies": {
		"@babel/core": "^7.4.4",
		"@babel/preset-env": "^7.4.4",
		"@types/jest": "^24.0.12",
		"@types/node": "^11.13.8",
		"@typescript-eslint/eslint-plugin": "^1.7.0",
		"@typescript-eslint/parser": "^1.7.0",
		"babel-eslint": "^10.0.1",
		"cross-env": "^5.2.0",
		"eslint": "^5.16.0",
		"eslint-config-airbnb-base": "^13.1.0",
		"eslint-import-resolver-typescript": "^1.1.1",
		"eslint-plugin-import": "^2.17.2",
		"jest": "^24.7.1",
		"rollup": "^1.10.1",
		"rollup-plugin-babel": "^4.3.2",
		"rollup-plugin-commonjs": "^9.3.4",
		"rollup-plugin-json": "^4.0.0",
		"rollup-plugin-node-resolve": "^4.2.3",
		"rollup-plugin-typescript2": "^0.21.0",
		"ts-jest": "^24.0.2",
		"typescript": "^3.4.5"
	},
	"scripts": {
		"prepare": "yarn run rollup:build && yarn run test",
		"rollup:build": "cross-env NODE_ENV=production rollup -c",
		"rollup:watch": "yarn run rollup:build -w",
		"test": "yarn run test:jest && yarn run test:eslint",
		"test:jest": "cross-env BABEL_ENV=test jest --config jest.config.json --no-cache",
		"test:eslint": "eslint --ext .ts,.mjs --ignore-path .gitignore packages/*/src/**/*.{ts,mjs}"
	}
}
